{
  "extends": ["airbnb"],
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": 0,
    "no-mixed-operators": 0,
    "arrow-parens": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": "off",
    "max-len": 0
  },
  "env": {
    "browser": true
  },
  "globals": {
    "fetch": true
  },
  "plugins": ["module-resolver"],
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [".js", ".ts", ".tsx"],
        "alias": {
          "@components": "./components",
          "@assets": "./assets",
          "@hooks": "./components"
        }
      }
    }
  }
}